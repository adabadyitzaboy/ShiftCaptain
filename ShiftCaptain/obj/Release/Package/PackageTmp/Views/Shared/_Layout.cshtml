<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Shift Captain</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="row">
                    <div class="small-6 large-3 columns">
                        <p class="site-title">
                            <a href='@Url.Action("Index", "Shift")'>
                                <img src='@Url.Content("~/Content/images/header/logo.png")' />
                            </a>
                        </p>
                    </div>
                    <div class="small-6 large-7 columns">
                        @*<section id="login">
                            @Html.Partial("_LoginPartial")
                        </section>*@
                        <nav>
                            <ul id="menu">
                               <li>@Html.ActionLink("Shifts", "Index", "Shift")</li>
                               <li>@Html.ActionLink("Shift Preferences", "Index", "ShiftPreference")</li>
                               <li>@Html.ActionLink("Preferences", "Index", "Preference")</li>
                                <li>@Html.ActionLink("Buildings", "Index", "Building")</li>
                                <li>@Html.ActionLink("Rooms", "Index", "Room")</li>
                                <li>@Html.ActionLink("Users", "Index", "User")</li>
                                <li>@Html.ActionLink("Versions", "Index", "Version")</li>
                            </ul>
                        </nav>
                    </div>
                    <div class="small-6 large-2 columns">
                        @Html.DropDownList("VersionId")
                    </div>
                </div>
                @RenderSection("header", required: false)
            </div>
            
            <div class="clearboth"></div>
            
        </header>
        
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        @*<footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>*@
        
        @Scripts.Render("~/bundles/jquery")

        @RenderSection("scripts", required: false)
    </body>
</html>
