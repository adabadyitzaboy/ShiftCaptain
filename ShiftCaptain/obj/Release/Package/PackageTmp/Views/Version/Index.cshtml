@model IEnumerable<ShiftCaptain.Models.Version>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="sortable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsVisible)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsReadyForApproval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsVisible)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsReadyForApproval)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsApproved)
        </td>
        <td>
            @if(ShiftCaptain.Infrastructure.SessionManager.IsManager){ @Html.ActionLink("Edit", "Edit", new { id=item.Id }) @Html.Raw(" | ") } 
                                                                       @Html.ActionLink("Details", "Details", new { id=item.Id}) 
            @if(ShiftCaptain.Infrastructure.SessionManager.IsManager){ @Html.Raw(" | ") @Html.ActionLink("Delete", "Delete", new { id=item.Id }) }
            @if (ShiftCaptain.Infrastructure.SessionManager.IsManager || ShiftCaptain.Infrastructure.SessionManager.IsShiftManager)
            { 
                if(!item.IsApproved && !item.IsReadyForApproval){
                    @Html.Raw(" | ") @Html.ActionLink("Validate Schedule", "ValidateSchedule", "ManageSchedule", new { id = item.Id }, new { }) 
                }
            }
            @if (ShiftCaptain.Infrastructure.SessionManager.IsManager)
            { 
                if(!item.IsApproved && item.IsReadyForApproval){
                    @Html.Raw(" | ") @Html.ActionLink("Approve Schedule", "ApproveSchedule", "ManageSchedule", new { id = item.Id }, new { }) 
                }
            }
            
            @if (ShiftCaptain.Infrastructure.SessionManager.IsManager)
            { 
                @Html.Raw(" | ") @Html.ActionLink("Clone Schedule", "CloneSchedule", "ManageSchedule", new { id = item.Id }, new { }) 
            }
        </td>
    </tr>
}

</table>
@section scripts {
    @Scripts.Render("~/Scripts/sort.js")
}