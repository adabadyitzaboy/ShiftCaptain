@model ShiftCaptain.Models.VersionErrors

@{
    ViewBag.Title = "Request Approval";
}
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <div class="row">
        <div class="small-12 large-12 columns left">
            @if (Model.IsReadyForApproval) {
                <p>Version is ready for approval.</p>
            }
            else if (Model.IsApproved)
            {
                <p>Version has been approved.</p>
            }else{
                <input type="submit" value='Request for Approval' />
            }
        </div>
        @if(Model.NumErrors > 0){
            <div class="small-12 large-12 columns error-message">
                <p>@Html.Raw(ViewBag.NumErrors) Errors</p>
                <ul>@Html.Raw(ViewBag.Errors)</ul>
            </div>
        }
    </div>
    @Html.Partial("_ScheduleErrors")
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
