@model ShiftCaptain.Models.Clone

@{
    ViewBag.Title = "Clone Schedule";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Version.Id)
    
    
    <div class="row">
        <div class="small-12 large-3 columns left">
            <h3>Version Name</h3>
            @Html.EditorFor(model => model.Version.Name)
            @Html.ValidationMessageFor(model => model.Version.Name)
        </div>

    </div>
    <div class="row">
        <div class="small-12 large-12 columns">
            <h3>Users</h3>
        </div>
        <div class="small-12 large-5 columns">
            @Html.ListBox("users", Model.User)
        </div>
        <div class="small-12 large-2 columns">
            <input type="button" id="btnCloneAllUsers" value=">>" />
            <input type="button" id="btnCloneUser" value=">" />
            <input type="button" id="btnRemoveUser" value="<" />
            <input type="button" id="btnRemoveAllUsers" value="<<" />
        </div>        
        <div class="small-12 large-5 columns">
            @Html.ListBoxFor(model => model.CloneUser, new List<SelectListItem>(), new { })
        </div>
        <div class="small-12 large-12 columns">
            <h3>Rooms</h3>
        </div>
        <div class="small-12 large-5 columns">
            @Html.ListBox("rooms", Model.Room)
        </div>
        <div class="small-12 large-2 columns">
            <input type="button" id="btnCloneAllRooms" value=">>" />
            <input type="button" id="btnCloneRoom" value=">" />
            <input type="button" id="btnRemoveRoom" value="<" />
            <input type="button" id="btnRemoveAllRooms" value="<<" />
        </div>           
        <div class="small-12 large-5 columns">
            @Html.ListBoxFor(model => model.CloneRoom, new List<SelectListItem>(), new { })
        </div>
        <div class="small-12 large-12 columns left">
            <input type="submit" id="btnCloneSchedule" value="Clone Schedule" />
        </div>
    </div>  
    
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/Clone.js")
}
