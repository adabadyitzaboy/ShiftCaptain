@model ShiftCaptain.Models.Clone

@{
    ViewBag.Title = "Clone Schedule";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Version.Id)
    
    
    <div class="row">
        <div class="small-12 large-3 columns left">
            <h3>Version Name</h3>
            @Html.EditorFor(model => model.Version.Name)
            @Html.ValidationMessageFor(model => model.Version.Name)
        </div>
    </div>
    @Html.Partial("_CloneUser")
    @Html.Partial("_CloneRoom")
    <div class="row">
        <div class="small-12 large-12 columns">
            <input type="submit" id="btnCloneSchedule" value="Clone Schedule" />
        </div>
    </div>  
    
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/Clone.js")
}
