@model ShiftCaptain.Models.Version

@{
    ViewBag.Title = "Disapprove Schedule";
}
<div class="row">
    <div class="small-12 large-12 columns left">
        @if (Model.IsApproved) {
            using (Html.BeginForm("DisapproveSchedule", "ManageSchedule")) {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)
                
                <input type="submit" value='Disapprove Schedule' id="DisapproveSchedule" />
                <p>Disapprove schedules to move from an approved status to "Ready for Approval"</p>
                <p>This should only be performed for changes to non-active future schedules.  Otherwise, you should clone this version to create a new schedule.</p>
            }
        } else if (!Model.IsApproved) {
            <p>Version is not approved.</p>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
